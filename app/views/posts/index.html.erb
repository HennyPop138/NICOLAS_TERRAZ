<div class="black-banner">
  <p>lundi au jeudi 8h - 18h, vendredi 8h - 17h</p>
  <p><i class="fa-solid fa-phone"></i>&nbsp;&nbsp;<a href="tel: 07 60 04 25 64">07 60 04 25 64</a></p>
</div>

<div class="radient-bg", data-controller="meatballs">
  <%= render "shared/top-bar" %>
  <%= render "shared/menu-burger" %>

  <div class="task-list">
    <div class="post-cards-header">
      <h1>Actualit√©s</h1>
      <% if user_signed_in? %>
        <%= link_to "Nouveau post", new_post_path, class: "button blue-button" %>
      <% end %>
    </div>

    <div class="post-cards">
      <% @posts.reverse.each_with_index do |post, index| %>
        <div class="post-card">
          <%= link_to post_path(post) do %>
            <%= cl_image_tag post.photo.key, class: "post-photo" %>
          <% end %>
          <div class="post-card-content">
            <p id="post-time-stamp">Le <%= post.created_at.strftime("%d/%m/%Y") %></p>
            <h3><%= post.title %></li></h3>
            <p><%= post.description.first(150) %>...</p>
            <i class="fa-solid fa-circle-arrow-right" id="read-more-btn"></i>
            <%= link_to "LIRE LA SUITE", post_path(post), id: "read-more-btn" %>
          </div>
        </div>
      <% end %>
    </div>


  </div>

</div>
<%= render "shared/footer" %>
