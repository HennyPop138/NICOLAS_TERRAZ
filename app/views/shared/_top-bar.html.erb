<!-- NAV BAR -->
<div class="top-bar">
  <div class="logo-blue">
    <%= link_to root_path do %>
      <%= image_tag("logo-blue.jpg", class: "logo-bleu") %>
    <% end %>
  </div>
  <nav class="nav-desktop">
    <ul>
      <li>
        <%= link_to root_path do %>
          <i class="fa-solid fa-home"></i>
        <% end %>
      </li>
      <li><%= link_to "À propos", about_path %></li>
      <li><%= link_to "Actualités", posts_path %></li>
      <li><%= link_to "Plomberie", plomberie_path %></li>
      <li><%= link_to "Chauffage", chauffage_path %></li>
      <li><%= link_to "Climatisation", climatisation_path %></li>
      <li><%= link_to "Contact", contact_path %></li>
      <li>
        <% if user_signed_in? %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
            <i class="fa-solid fa-sign-out"></i>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <i class="fa-solid fa-user"></i>
          <% end %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
